@model IEnumerable<WelcomeASP.Data.Entities.Trello.Board>


@{
    ViewData["Title"] = "Trello";
    ViewData["ParallaxTitle"] = "Trello Boards";
    ViewData["ParallaxText"] = "Information  e.t.c";
}

<partial name="Asentus/Parallax" />

<div class="row">

    @foreach (var item in Model)
    {
        <div>
            <a asp-controller="Trello" 
               asp-action="ShowColumns" 
               asp-route-id="@item.Id">
                @Html.DisplayFor(modelItem => item.Title)
            </a>
        </div>
    }
</div>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateBoard">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label"> Название новой доски </label>
                    <input name="Title" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>






